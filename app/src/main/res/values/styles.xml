    <style name="MediumGreenTextAppearence"    Parent="@android:style/TextAppearence">
    <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0f0</item>
    </style>
    <style name="SmallBlueTextAppearence"    Parent="@android:style/TextAppearence">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#00f</item>
    </style>

</resources>
